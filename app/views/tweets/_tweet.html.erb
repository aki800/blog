<div class="row">
        <div class="col s12 m7">
          <div class="card">
            <div class="card-image">
              <img src= <%= tweet.image %>>
              <span class="card-title">
              <%= tweet.user.name %>
              </span>
              <%= link_to "/tweets/#{tweet.id}", class: "btn-floating halfway-fab waves-effect waves-light #ffb300 amber darken-1", method: :get do %>
              <i class="material-icons">chat_bubble_outline
              </i>
              <% end %>

            </div>
            <div class="card-content">
              <p><%= tweet.text %></p>
            </div>
            <% if user_signed_in? && current_user.id == tweet.user_id %>
            <div class="card-action ">
              <%= link_to "編集", "/tweets/#{tweet.id}/edit", method: :get %>
              <%= link_to "削除", "/tweets/#{tweet.id}", method: :delete %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
</div>

